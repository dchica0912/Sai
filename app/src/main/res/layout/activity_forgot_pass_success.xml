<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    tools:context=".Modules.User.Reset.ForgotPassSuccess">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="255dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:src="@drawable/fp2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_email"
        android:fontFamily="@font/avenir_bold"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:textColor="@color/darkGrey"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_regular"
        android:text="@string/check_email_sub"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/darkGrey"
        android:layout_marginTop="20dp"
        />

    <!--<Button-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:id="@+id/sendCheck"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/purple_background_button"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true"-->
        <!--android:elevation="20dp"-->
        <!--android:foreground="?android:attr/selectableItemBackground"-->
        <!--android:padding="15dp"-->
        <!--android:text="Login"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="15sp" />-->
    <RelativeLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/sendCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/violet"
            app:cardCornerRadius="25dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:contentPadding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_regular"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textColor="@color/whiteText"
                android:textSize="15sp" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>