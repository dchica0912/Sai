<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/background"
    android:paddingTop="20dp"
    tools:context=".RegistrationFirst">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/registrationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/registrationUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registrationTitle"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/tracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="60dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/ovalpurple_outline"
                    android:padding="15dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/violet"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/ovalpurple_outline"
                    android:padding="15dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/violet" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/ovalpurple"
                    android:padding="15dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/whiteText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/tracker"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nickname"
                            android:textColor="#aeaeae"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birthdate"
                            android:textColor="#aeaeae"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="#aeaeae"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textColor="#aeaeae"
                            android:fontFamily="@font/montserrat"/>

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:textColor="#aeaeae"
                            android:fontFamily="@font/montserrat"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1    "
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clar"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="08/28/1999"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="clarissehelaine@gmail.com"
                            android:layout_marginTop="15dp"
                            android:textSize="12sp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/montserrat"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="*************"
                            android:drawableRight="@drawable/icon_reveal_password"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/darkGrey"
                            android:fontFamily="@font/montserrat"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>




        </RelativeLayout>




    </RelativeLayout>
    <ImageView
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_previous" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/purple_background_button"
        android:clickable="true"
        android:focusable="true"
        android:text="REGISTER"
        android:textColor="@color/whiteText" />

</RelativeLayout>