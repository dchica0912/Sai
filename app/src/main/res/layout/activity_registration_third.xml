<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="false"
    android:paddingTop="20dp"
    tools:context=".Modules.User.Registration.RegistrationFirst">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/registrationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_bold"
            android:text="Registration"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/registrationUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registrationTitle"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/tracker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stepOne"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/ovalpurple"
                    android:fontFamily="@font/avenir_regular"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/whiteText"
                    android:textSize="30sp" />

                <View
                    android:id="@+id/firstHor"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/stepOne"
                    android:background="@color/violet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:id="@+id/stepTwo"
                    android:layout_toEndOf="@id/firstHor"
                    android:layout_weight="1"
                    android:background="@drawable/ovalpurple"
                    android:fontFamily="@font/avenir_regular"
                    android:gravity="center"
                    android:textColor="@color/whiteText"
                    android:text="2"
                    android:textSize="30sp" />

                <View
                    android:id="@+id/secondHor"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/stepTwo"
                    android:background="@color/violet" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:id="@+id/stepThree"
                    android:layout_toEndOf="@id/secondHor"
                    android:background="@drawable/ovalpurple"
                    android:fontFamily="@font/avenir_regular"
                    android:gravity="center"
                    android:textColor="@color/whiteText"
                    android:text="3"
                    android:textSize="30sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tracker"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Nickname"
                            android:textColor="#aeaeae"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Birthdate"
                            android:textColor="#aeaeae"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Gender"
                            android:textColor="#aeaeae"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Email Address"
                            android:textColor="#aeaeae"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Password"
                            android:textColor="#aeaeae"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1    "
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Clar"
                            android:textSize="20sp"
                            android:textColor="@color/darkGrey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="08/28/1999"
                            android:textSize="20sp"
                            android:textColor="@color/darkGrey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="Female"
                            android:textSize="20sp"
                            android:textColor="@color/darkGrey" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/avenir_regular"
                            android:text="clarissehelaine@gmail.com"
                            android:textColor="@color/darkGrey"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawableRight="@drawable/icon_reveal_password"
                            android:fontFamily="@font/avenir_regular"
                            android:text="*************"
                            android:textSize="20sp"
                            android:textColor="@color/darkGrey" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/icon_previous" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/purple_background_button"
        android:clickable="true"
        android:focusable="true"
        android:text="REGISTER"
        android:textColor="@color/whiteText" />

</RelativeLayout>