<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f2fb"
    tools:context=".SaiChatBot">

    <ScrollView
        android:id="@+id/scrollChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userInput">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/time"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4:18pm"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#aeaeae"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:id="@+id/botMessage"
                android:layout_below="@+id/time"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="8dp"

                    android:background="@drawable/bot_bubble"
                    android:elevation="4dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="12dp"
                    android:text="Sobrang staticasdlkasdlasdalksdlakdalskdlaskdlkasdlk"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meMessage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/botMessage"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/me_bubble"
                    android:elevation="3dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="12dp"
                    android:text="Ng code ko na 'to Sobrang staticasdlkasdlasdalksdlakdalskdlaskdlkasdlk"
                    android:textAlignment="textStart"
                    android:textColor="@color/darkGrey"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/botMessage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meMessage"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:background="@drawable/bot_bubble"
                android:elevation="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="12dp"
                android:text="HelloHelloHelloHelloHelloHelloHelloHello"
                android:textColor="#fff"
                android:textSize="20sp" />



            <TextView
                android:id="@+id/meMessage2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/botMessage2"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/me_bubble"
                android:elevation="3dp"
                android:fontFamily="@font/montserrat"
                android:padding="12dp"
                android:text="Pagkaka layout ko Sobrang staticasdlkasdlasdalksdlakdalskdlaskdlkasdlk"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/botMessage3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/meMessage2"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:background="@drawable/bot_bubble"
                android:elevation="4dp"
                android:fontFamily="@font/montserrat"
                android:padding="12dp"
                android:text="Test one two Sobrang staticasdlkasdlasdalksdlakdalskdlaskdlkasdlk"
                android:textColor="#fff"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/meMessage3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/botMessage3"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/me_bubble"
                android:elevation="3dp"
                android:fontFamily="@font/montserrat"
                android:padding="12dp"
                android:text="I'm sad Sobrang staticasdlkasdlasdalksdlakdalskdlaskdlkasdlk"
                android:textAlignment="textStart"
                android:textColor="@color/darkGrey"
                android:textSize="20sp" />

        </RelativeLayout>

    </ScrollView>

    <!--android:scaleType="fitXY"-->
    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_edit_text_transparent"
        android:clickable="true"
        android:drawableEnd="@drawable/icon_send_button"
        android:elevation="4dp"
        android:focusable="true"
        android:fontFamily="@font/montserrat"
        android:hint="Ask anything"
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:padding="8dp"
        android:textColor="#000"
        android:textColorHint="#adaeaeae"
        android:textSize="18sp" />

</RelativeLayout>