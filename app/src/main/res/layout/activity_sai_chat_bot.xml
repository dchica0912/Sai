<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f2fb"
    tools:context=".SaiChatBot">

    <RelativeLayout
        android:id="@+id/botLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/botMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:textColor="#fff"
            android:text="Sobrang static"
            android:background="@drawable/bot_bubble"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botLayout"
        android:id="@+id/meLayout"
        >
        <TextView
            android:id="@+id/meMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="3dp"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:text="Ng code ko na 'to"
            android:background="@drawable/me_bubble"
            android:layout_alignParentEnd="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meLayout"
        >
        <TextView
            android:id="@+id/botMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="#fff"
            android:elevation="4dp"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:text="Tama ba"
            android:background="@drawable/bot_bubble"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botLayout2"
        android:id="@+id/meLayout2"
        >
        <TextView
            android:id="@+id/meMessage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="3dp"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:text="Pagkaka layout ko"
            android:background="@drawable/me_bubble"
            android:layout_alignParentEnd="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meLayout2"
        >
        <TextView
            android:id="@+id/botMessage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:textColor="#fff"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:text="Test one two"
            android:background="@drawable/bot_bubble"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botLayout3"
        >
        <TextView
            android:id="@+id/meMessage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="3dp"
            android:fontFamily="@font/montserrat"
            android:padding="12dp"
            android:text="I'm sad"
            android:background="@drawable/me_bubble"
            android:layout_alignParentEnd="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/userInput"
        android:imeActionId="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_edit_text"
        android:clickable="true"

        android:elevation="4dp"
        android:imeOptions="actionSend"
        android:paddingBottom="20dp"
        android:fontFamily="@font/montserrat"
        android:hint="Ask anything"
        android:drawableRight="@drawable/icon_send_button"
        android:padding="8dp"
        android:textColor="#000"
        android:textColorHint="#adaeaeae"
        android:textSize="18sp" />

    <!--<Button-->
        <!--android:id="@+id/sendButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:text="Send" />-->

</RelativeLayout>