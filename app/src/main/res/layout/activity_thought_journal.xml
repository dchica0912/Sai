<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingTop="40dp"
    android:orientation="vertical"
    tools:context=".ThoughtJournal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listIcon"
            android:src="@drawable/ic_list_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/listIcon"
        android:id="@+id/writeDiary"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:paddingTop="110dp"
        android:paddingBottom="110dp"
        android:background="@drawable/thought_diary_list"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_add_note_tab"
            android:gravity="center"
            android:text="Share your thoughts"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>