<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Modules.Mood.MoodFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/avenir_bold"
        android:text="How are you feeling today?"
        android:textSize="22sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="240dp"
        android:visibility="invisible" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSeek"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:progress="50"
        android:background="@drawable/seekbar_line_background"
        android:progressBackgroundTint="@color/lightViolet"
        android:progressTint="@color/violet"
        android:backgroundTint="@color/lightViolet"
        android:thumb="@drawable/thumb" />

    <android.support.v7.widget.CardView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        app:cardBackgroundColor="@color/violet"
        app:cardCornerRadius="25dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_regular"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:textColor="@color/whiteText"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageSeek"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/td1" />

    <ImageView
        android:id="@+id/imageSeek2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/td2" />

    <ImageView
        android:id="@+id/imageSeek3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/td3" />

    <ImageView
        android:id="@+id/imageSeek4"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/td4" />

    <ImageView
        android:id="@+id/imageSeek5"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/td5" />
</RelativeLayout>